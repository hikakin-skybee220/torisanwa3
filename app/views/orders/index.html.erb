    <script>
        $('#cart').click(function(){
            if ($('.cart_number').text()!=0) {
                var CartModal = $('#cart-modal');
                if (CartModal.hasClass('open')){
                    CartModal.removeClass('open');     
                    $('#fade-layer').css('visibility', 'hidden');    
                }else{
                    CartModal.addClass('open');    
                    $('#fade-layer').css('visibility', 'visible');        
                }
                
            }
        }); 
        $('#fade-layer').click(function(){
            if ($('#cart-modal').hasClass('open')) {
                $('#cart-modal').removeClass('open');
                $('#fade-layer').css('visibility', 'hidden');  
            }
        })

