  <header >
    <div class="h_top d-flex py-2 " id="h_top">
      <div class="h_icon">
        <img src="/img/icon.png" alt="" class="img-fluid icon ml-3">
      </div>

      <div class="ml-auto d-flex">
        <div class="cart" id="cart">
          <img src="/img/cart1.png" alt="" class="img-fluid cart_img mt-2 mr-3">
          <div  class="cart_number "><%=@orders.count%></div>
        </div>        
      </div>
    </div>
    

    
    <div class="cart-modal-wrapper px-3" id="cart-modal">
        <img src="/img/angle1.png" alt="" class="cart-angle">
        <% @orders.each do |order|%>
            <div class="border my-2 border-secondary b_border cart-border"></div>   
            <%=link_to("/orders/#{order.id}/edit") do %>
                <div class="cart-item">
                    <div class="d-flex py-3"　>
                        <div class="cart-image col-5 px-2">
                            <% @menus.each do |menu|%>
                                <% if menu.name == order.name %>
                                    <img src="<%="/img/#{menu.image_name}"%>" alt="">                              
                                <% end %>
                            <% end %>
                        </div>
                        <div class="cart-detail col-7 px-0">
                            <p  class="c_name m-1"><%=order.name%><br><%=order.small_plate%><br><%=order.size%><br>
                            <% if order.quantity > 1 %>
                              <span class="c_quantity">×<%=order.quantity%></span>
                            <% end %>
                            </p>
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
        <% if session[:user_id] !=nil %>
            <%= link_to("/orders/#{@current_user.seat_number}/check",{class: " kkk"}) do%>
                <button class=" enter mt-2 mb-4 col-9 cart-enter" >注文手続きへ</button>
            <% end %>          
        <% end %>
    </div>

    <div class="menus"></div>
    <nav class="menus d-flex mt-1 py-1">
      <div class="nav" id="nav-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-first-tab" data-toggle="tab" href="#nav-first" role="tab" aria-controls="nav-home" aria-selected="true">親子丼</a>
        <a class="nav-item nav-link" id="nav-second-tab" data-toggle="tab" href="#nav-second" role="tab" aria-controls="nav-profile" aria-selected="false">カツ丼</a>
        <a class="nav-item nav-link" id="nav-third-tab" data-toggle="tab" href="#nav-third" role="tab" aria-controls="nav-contact" aria-selected="false">唐揚げ定食</a>
        <a class="nav-item nav-link" id="nav-fourth-tab" data-toggle="tab" href="#nav-fourth" role="tab" aria-controls="nav-contact" aria-selected="false">一品</a>
      </div>
    </nav>
  </header>



